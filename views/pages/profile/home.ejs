<%- contentFor("body") %>
<br/><br/><br/>
<div class="valign-wrapper" style="margin: 0 auto; width:100%;height:100%;">
    <div class="valign" style="width:100%;">
        <div class="container ">
           <div class="row ">
              <div class="col s12 m8 offset-m2">
                 <div class="card z-depth-3">
                    <div class="card-content">
                       <span class="card-title center-align"><h2>Welcome <%= data.data.username %></h2></span>
                       <div class="row">
                        <ul class="collapsible popout">

                            <li class="active">
                              <div class="collapsible-header center-align purple lighten-5">
                                <i class="lni lni-user"></i>
                                Profile Info
                            </div>
                              <div class="collapsible-body">
                                 <p><strong>Username:</strong> <%= data.data.username %></p>
                                 <p><strong>E-mail:</strong> <%= data.data.email %> </p>
                                 <p><strong>Space used: </strong> 50GB (Example) </p>
                                 <p><strong>Date Creation: </strong><%= data.data.createdAt %> </p><br/>
                                 <p class="right-align">
                                    <a  class="btn waves-effect right-align waves-light light-green lighten-1" href="/profile/bunker">
                                       <i class="lni lni-database"></i>
                                       <span> Go to Bunker</span>
                                   </a> 
                                    <a  class="btn waves-effect right-align waves-light red darken-2" href="/profile/Logout">
                                        <i class="lni lni-power-switch"></i>
                                        <span> Logout</span>
                                    </a> 
                                 </p>  
                              </div>
                            </li>

                            <li>
                              <div class="collapsible-header teal lighten-5">
                                <i class="lni lni-cog"></i>
                                Settings
                           </div>
                              <div class="collapsible-body">
                                 <ul class="collapsible">
                                    <li>
                                      <div class="collapsible-header"><i class="lni lni-pencil"></i>Update Info</div>
                                      <div class="collapsible-body"><span>Update E-mail or Password</span></div>
                                    </li>
                                    <li>
                                      <div class="collapsible-header"><i class="lni lni-shield"></i>Security Account</div>
                                      <div class="collapsible-body"><span>2FA and E-mail Confirmation</span></div>
                                    </li>                    
                                  </ul>
                                        
                              </div>
                            </li>

                            <li>
                              <div class="collapsible-header orange lighten-5">
                              <i class="lni lni-slideshare"></i>
                                Help Center & Donations
                           </div>
                              <div class="collapsible-body">
                                 <ul class="collapsible">
                                    <li>
                                      <div class="collapsible-header"><i class="lni lni-bug"></i> Report an Issue/Bug</div>
                                      <div class="collapsible-body"><span>Form to send a report</span></div>
                                    </li>
                                    <li>
                                      <div class="collapsible-header"><i class="lni lni-dollar"></i> Donates</div>
                                      <div class="collapsible-body"><span>Cryptowallets here.</span></div>
                                    </li>                    
                                  </ul>
                                        
                              </div>
                            </li>
                          </ul>
                     </div>
                    </div>
                 </div>
              </div>
           </div>
        </div>
    </div>
</div>